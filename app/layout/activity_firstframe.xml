<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstframe">
    <LinearLayout
        android:id="@+id/rows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="347dp">

        <LinearLayout
            android:id="@+id/rows2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="275dp"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteY="347dp">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_14"
                android:layout_marginRight="250dp"
                android:layout_marginLeft="20dp"
                android:onClick="page3"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="74dp"
                android:layout_height="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.045"
                android:layout_gravity="right"
                app:srcCompat="@drawable/up" />
        </LinearLayout>

        <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="خدمات"
        android:textColorLink="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
        app:backgroundTint="#00BCD4"
        android:onClick="page1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366" />

    <Button
        android:id="@+id/button3"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:text="منتجات"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#00BCD4"
        android:onClick="page2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:layout_constraintVertical_bias="0.531" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kkk" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bacground_row1"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ho"
                android:onClick="home"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_2"
                android:onClick="profile"/>


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:onClick="basket"
                android:background="@mipmap/ic_4" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:onClick="chat"
                android:background="@mipmap/ic_5" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>